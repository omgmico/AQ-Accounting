{
  "name": "aq-accounting",
  "version": "1.0.0",
  "description": "AQ Accounting - Modern business accounting website with Tailwind CSS",
  "main": "index.html",
  "scripts": {
    "dev": "tailwindcss -i ./src/input.css -o ./assets/css/style.css --watch",
    "build": "tailwindcss -i ./src/input.css -o ./assets/css/style.css --minify",
    "build:prod": "npm run build && npm run optimize",
    "optimize": "postcss ./assets/css/style.css --use autoprefixer --replace"
  },
  "keywords": [
    "accounting",
    "business",
    "tailwindcss",
    "responsive",
    "glassmorphism"
  ],
  "author": "AQ Accounting",
  "license": "MIT",
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
