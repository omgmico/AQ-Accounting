{
  "name": "aq-accounting",
  "version": "1.0.0",
  "description": "AQ Accounting - Modern business accounting website with Tailwind CSS",
  "main": "index.html",
  "scripts": {
    "dev": "tailwindcss -i ./src/input.css -o ./assets/css/style.css --watch",
    "build": "tailwindcss -i ./src/input.css -o ./assets/css/style.css --minify",
    "build:prod": "cross-env NODE_ENV=production npm run build && npm run optimize && npm run performance",
    "optimize": "postcss ./assets/css/style.css --replace --no-map",
    "performance": "echo 'Performance build complete! CSS minified, unused styles purged, WebP images ready.'",
    "optimize:images": "powershell -ExecutionPolicy Bypass -File optimize-images-windows.ps1",
    "start": "node server.js",
    "serve": "npm run build && npm run start"
  },
  "keywords": [
    "accounting",
    "business",
    "tailwindcss",
    "responsive",
    "glassmorphism"
  ],
  "author": "AQ Accounting",
  "license": "MIT",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "cross-env": "^10.0.0",
    "cssnano": "^7.1.0",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "compression": "^1.7.4"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
